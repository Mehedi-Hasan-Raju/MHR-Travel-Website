<% layout('layouts/boilerplate') %>

<div class="profile-container">

  <!-- Sidebar -->
  <aside class="profile-sidebar">
    <h3>Profile</h3>
    <ul>
      <li>
        <a href="/users/<%= user._id %>?tab=about" class="<%= tab==='about' ? 'active' : '' %>">
          ðŸ‘¤ About Me
        </a>
      </li>
      <li>
        <a href="/users/<%= user._id %>?tab=past-trips" class="<%= tab==='past-trips' ? 'active' : '' %>">
          ðŸ§³ Trips
        </a>
      </li>
    </ul>
  </aside>

  <!-- Main Content -->
  <main class="profile-content">

    <% if(tab === 'about') { %>
      <div class="about-section">
        <div class="user-header">
          <div class="avatar"><%= user.username[0].toUpperCase() %></div>
          <div class="user-info">
            <h2><%= user.username %></h2>
          </div>
        </div>
        <p class="about-text"><%= user.name %></p>
        <p class="about-text"><%= user.bio %> <br>
         <%= user.phone %>
        </p>
        <a href="/users/<%= user._id %>/edit" class="btn-edit">Edit Profile</a>
      </div>

    <% } else if(tab === 'past-trips') { %>
      <div class="trips-section">
        <!-- Upcoming Trips -->
        <h2>Upcoming Trips</h2>
        <% if(upcomingTrips.length === 0) { %>
          <p class="no-trips">No upcoming trips.</p>
        <% } else { %>
          <div class="trips-grid">
            <% upcomingTrips.forEach(booking => { %>
              <div class="trip-card">
                <img src="<%= booking.listing.image.url %>" alt="<%= booking.listing.title %>">
                <div class="trip-info">
                  <h4><%= booking.listing.title %></h4>
                  <p>Staying on <%= booking.date.toDateString() %></p>
                </div>
              </div>
            <% }) %>
          </div>
        <% } %>

        <!-- Past Trips -->
        <h2 style="margin-top:40px;">Past Trips</h2>
        <% if(pastTrips.length === 0) { %>
          <p class="no-trips">No past trips.</p>
        <% } else { %>
          <div class="trips-grid">
            <% pastTrips.forEach(booking => { %>
              <div class="trip-card">
                <img src="<%= booking.listing.image.url %>" alt="<%= booking.listing.title %>">
                <div class="trip-info">
                  <h4><%= booking.listing.title %></h4>
                  <p>Stayed on <%= booking.date.toDateString() %></p>

                  <!-- Delete button -->
                  <form action="/bookings/<%= booking._id %>?_method=DELETE" method="POST" style="margin-top:10px;">
                    <button type="submit" class="btn-delete">Delete</button>
                  </form>
                </div>
              </div>
            <% }) %>
          </div>
        <% } %>
      </div>
    <% } %>

  </main>
</div>

<style>
/* Container */
.profile-container {
  display: flex;
  min-height: 100vh;
  font-family: Arial, sans-serif;
  background: #fff;
}

/* Sidebar */
.profile-sidebar {
  width: 250px;
  padding: 20px;
  border-right: 1px solid #eee;
}

.profile-sidebar h3 {
  margin-bottom: 30px;
}

.profile-sidebar ul {
  list-style: none;
  padding: 0;
}

.profile-sidebar li {
  margin-bottom: 15px;
}

.profile-sidebar a {
  text-decoration: none;
  color: #666;
  font-weight: normal;
  transition: color 0.2s;
}

.profile-sidebar a.active {
  color: black;
  font-weight: bold;
}

/* Main Content */
.profile-content {
  flex: 1;
  padding: 40px;
}

/* About Section */
.user-header {
  display: flex;
  align-items: center;
  margin-bottom: 20px;
}

.avatar {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  background: #000;
  color: #fff;
  font-size: 32px;
  font-weight: bold;
  display: flex;
  justify-content: center;
  align-items: center;
}

.user-info {
  margin-left: 20px;
}

.about-text {
  margin: 30px 0;
  color: #444;
  max-width: 400px;
}

.btn-edit {
  background: #FF385C;
  color: #fff;
  padding: 10px 20px;
  border-radius: 8px;
  text-decoration: none;
}

/* Trips Section */
.trips-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
  gap: 20px;
  margin-top: 20px;
}

.trip-card {
  border: 1px solid #ddd;
  border-radius: 12px;
  overflow: hidden;
  box-shadow: 0 2px 6px rgba(0,0,0,0.05);
}

.trip-card img {
  width: 100%;
  height: 150px;
  object-fit: cover;
}

.trip-info {
  padding: 15px;
}

.trip-info h4 {
  margin: 0 0 10px 0;
}

.trip-info p {
  margin: 0;
  color: #666;
  font-size: 14px;
}

/* Delete Button */
.btn-delete {
  background: #dc3545;
  color: #fff;
  padding: 6px 12px;
  border: none;
  border-radius: 6px;
  font-size: 14px;
  cursor: pointer;
}

.btn-delete:hover {
  background: #c82333;
}

.no-trips {
  color: #666;
  margin-top: 20px;
}
</style>
